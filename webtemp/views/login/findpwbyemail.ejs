
<link rel="stylesheet" href="/stylesheets/biz/login/findpwbyemail.css" />
<div class="container findpw-main">
    <div class="row">

        <div class="col-md-8 col-md-offset-2">

            <div class="row findpw-head">
                <a class="logo" href="/"><img src="/images/yqslogo.png" alt="摇钱树" ></a>
                <span class="title">邮件找回密码</span>
                <a class="" href="/">
                    <span class="regist">返回登录</span>
                </a>
            </div>


            <div class="row findpw-body">
                <section class="" style="left:25%;">
                    <form class="form-horizontal" role="form" action="/doFindpwbyemail"  id="findpwbyemail" >
                        <div class="form-group">
                            <label for="mobile" class="control-label" style="margin-left: 150px;">注册手机号</label>
                            </br>
                            <div class="padding-left" style="width: 325px; margin-left: 150px;" >
                                <input  class="form-control"  value="" readonly="true"  name="mobile" id="mobile" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="control-label" style="margin-left: 150px;">注册邮箱：</label>
                            </br>
                            <div class="padding-left" style="width: 325px; margin-left: 150px;">
                                <input type="text" class="form-control" data-verify="empty email" id="email" name="email" placeholder="请输入您的注册邮箱">
                            </div>

                        </div>


                        <div class="form-group">
                            <div class=" padding-left" style="width: 325px; margin-left: 150px;">
                                <button type="submit" class="btn btn-submit">发送邮件</button>
                            </div>
                        </div>

                    </form>
                </section>

                <section class="col-md-1"></section>

            </div>

        </div>
    </div>
</div>


<!--初始化当页脚本-->
<script>
    require('dmp-login/findpwbyemail');
</script>


