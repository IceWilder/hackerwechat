<body class="login-page">
    <div class="login-box">
      <div class="login-logo">
        <a href="#"><b>核舞器</b></a>
      </div><!-- /.login-logo -->
      <div class="login-box-body" style="overflow: hidden;">
        <p class="login-box-msg">欢迎登陆核舞器</p>

        <form role="form" class="form-horizontal" novalidate>

          <div class="control-group has-feedback" style="margin-bottom: 20px;">
            <div class="controls">
              <input type="text" class="form-control" name="username" id="username" placeholder="账号" required data-validation-required-message="账号不能为空!">
              <span class="glyphicon glyphicon-earphone form-control-feedback"></span>
            </div>
          </div>

          <div class="control-group has-feedback"  style="margin-bottom: 20px;">
            <div class="controls">
              <input type="password" class="form-control" name="password" id="password" placeholder="密码" required data-validation-required-message="密码不能为空!">
              <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
          </div>

          <div class="row"  style="margin-bottom: 20px;">
            <div class="col-xs-8">    
              <div class="checkbox icheck">
                <label>
                  <input type="checkbox" checked id="remember" name="remember" style="position: relative;margin-left: 0;"> 三天内记住我
                </label>
              </div>                        
            </div><!-- /.col -->
            <div class="col-xs-4">
              <button class="btn btn-primary btn-block btn-flat">登录</button>
            </div><!-- /.col -->
          </div>
        </form>

