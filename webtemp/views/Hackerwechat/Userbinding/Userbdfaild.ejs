<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title>用户绑定</title>
    <link href="/css/biz/hackerwechat/Userbdfaild.css" rel="stylesheet" type="text/css">
    <link href="/css/biz/hackerwechat/weui.min.css" rel="stylesheet" type="text/css">
    <script type="text/javascript">
        var sleep = 60, interval = null;
        window.onload = function ()
        {
            var btn = document.getElementById ('btn');
            btn.onclick = function ()
            {
                if (!interval)
                {
                    this.style.backgroundColor = 'rgb(182,181,184)';
                    this.disabled = "disabled";
                    this.style.cursor = "wait";
                    this.value = "重新发送 (" + sleep-- + ")";
                    interval = setInterval (function ()
                    {
                        if (sleep == 0)
                        {
                            if (!!interval)
                            {
                                clearInterval (interval);
                                interval = null;
                                sleep = 60;
                                btn.style.cursor = "pointer";
                                btn.removeAttribute ('disabled');
                                btn.value = "免费获取验证码";
                                btn.style.backgroundColor = '';
                            }
                            return false;
                        }
                        btn.value = "重新发送 (" + sleep-- + ")";
                    }, 1000);
                }
            }
        }
    </script>
</head>
<body>
<div class="userBind">
    <img src="/images/hackerwechati/resume_title.png">
    <span class="userBindTxt">用户绑定</span>
</div>
<div class="content">
    <div class="userName">
        <span class="userNameTxt">用户名</span>
        <input class="userNameIn" placeholder="请输入您的手机号码" type="text">
    </div>
    <div class="checkName">
        <span class="checkNameTxt">验证码</span>
        <input class="checkNameIn" type="text">
        <input class="getBtn" type="button" value="获取验证码" id="btn">
    </div>
    <div class="sureBtn">
        <input class="sure_btn" type="button" value="确定">
    </div>
</div>
<div class="weui_dialog_confirm" >
    <div class="weui_mask"></div>
    <div class="weui_dialog" id="divalt1">
        <!--<div class="weui_dialog_bd" id="divalt1">确认提交?</div>-->
        <!--<div class="weui_icon_area"><i class="weui_icon_success weui_icon_msg"></i></div>-->
        <p class="tishi1">验证码错误 </p>
        <div class="a21">
            <!--<button class="btn"><a href="#" class="weui_btn_dialog primary" id="abhc">确定</a></button>-->
            <input type="button" class="btn1" value="确定">
        </div>
    </div>


</body>
</html>