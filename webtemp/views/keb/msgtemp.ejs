<!-- Content Wrapper. Contains page content -->
<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            模板信息配置
            <small>微信模板信息ID配置</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-wechat"></i> 微信设置</li>
            <li class="active">模板信息配置</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <form role="form" class="form-horizontal" novalidate id="msgtempForm">

            <div class="row">

                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                        <div class="box box-primary">
                            <div class="box-header">
                                <h3 class="box-title">接入参数</h3>
                                <a class="btn btn-primary pull-right save-all"><i class="fa fa-save"></i>&nbsp;保存所有</a>
                            </div><!-- /.box-header -->
                        <!-- form start -->
                            <div class="box-body">
                                <table class="table table-bordered" style="width:60%">
                                    <tbody><tr>
                                        <th>消息模板描述</th>
                                        <th>消息模板ID</th>
                                        <th style="width: 40px">操作</th>
                                    </tr>
                                    <%for(var i = 0; i < data.length; i++){
                                        var temp = data[i];
                                    %>
                                    <tr>
                                        <td><%=temp.descrip%></td>
                                        <td>
                                            <input id="temp_<%=temp.wwt_id%>" value="<%=temp.template_id != null ? temp.template_id:''%>" class="form-control template" data-id="<%=temp.wwt_id%>">
                                        </td>
                                        <td><a class="btn btn-primary save-single" data-id="<%=temp.wwt_id%>">保存</a> </td>
                                    </tr>
                                    <%}%>

                                    </tbody></table>

                            </div><!-- /.box-body -->

                    </div><!-- /.box -->
                </div><!--/.col (left) -->

            </div>   <!-- /.row -->

        </form>

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->