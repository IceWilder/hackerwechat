<style type="text/css">
    .content-header{
        margin-bottom: 10px;
        height: 70px;
        line-height: 70px;
    }
    .btn{
        position: relative;
        bottom: 7px;
    }
    p{
        display: block;
        min-height:40px;
        line-height: 40px;
    }
    img{
        width: 100%;
        height: 100%;
    }
    .user-head{
        float: left;
        position:relative;
        left: 10px;
        width: 100px;
        height: 100px;
    }
    .head-wrapper{
        height: 170px;
    }
</style>
<section class="content-header">
    <h1 style="display:inline-block;">导师昵称：<%=data.nick_name%></h1>&nbsp;&nbsp;
    <button class="btn btn-primary btn-lg active" id="btn-upload">上传新课程</button>

</section>

<section class="content">
    <%if(data.sex==0){%>
    <p>性别:男</p>
    <%}else{%>
    <p>性别:女</p>
    <%}%>
    <p>注册时间:<%=data.create_time%></p>
    <p>用户ID:<%=data.user_id%></p>
    <p>粉丝数:<%=data.fans_num%></p>
    <p>关注人数:<%=data.atten_num%></p>
    <p>课程数量:<%=data.count%></p>
    <div class="head-wrapper">
        <p style="float: left">导师头像:</p><div class="user-head"><img src="<%=data.user_head%>"></div>
    </div>
    <div style="border-bottom:1px solid darkgrey;"></div>
</section>

<!--<script src="jquery.js"></script>-->
<script type="text/javascript" src="/plugins/My97DatePicker/WdatePicker.js"></script>

<script>
    var user_id=<%=data.user_id%>;
    $("btn-upload").click(function(){
        location.href = '/hewuqi/addcourse?user_id='+user_id;
    })
</script>